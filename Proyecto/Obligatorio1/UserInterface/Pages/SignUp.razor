@page "/SignUp"

@layout LoginLayout
@using Microsoft.AspNetCore.Identity
@inherits LayoutComponentBase

<PageTitle>DepoQuick</PageTitle>

@inject NavigationManager NavigationManager
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5 justify-content-center align-items-center">
        <img src="logo.png" class="img-fluid" alt="Logo Depo Quick" width="520" height="320">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <EditForm Model="@SignUpModel" OnValidSubmit="HandleValidSubmit">
          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 fs-4">Register in with:</p>
          </div>
          
          <div data-mdb-input-init class="form-outline mb-2">
            <InputText @bind-Value="SignUpModel.Name" type="name" class="form-control form-control-lg" placeholder="Enter name" required/>
            <label class="form-label" for="UserName">Name</label>
          </div>
          
          <div data-mdb-input-init class="form-outline mb-2">
            <InputText @bind-Value="SignUpModel.Surname" type="surname" class="form-control form-control-lg" placeholder="Enter surname" required/>
            <label class="form-label" for="UserSurname">Surname</label>
          </div>
          
          <div data-mdb-input-init class="form-outline mb-2">
            <InputText @bind-Value="SignUpModel.Email" type="email" class="form-control form-control-lg" placeholder="Enter email address" required/>
            <label class="form-label" for="UserEmail">Email address</label>
          </div>
          
          <div data-mdb-input-init class="form-outline mb-2">
            <InputText @bind-Value="SignUpModel.Password" type="password" class="form-control form-control-lg" placeholder="Enter password" required/>
            <label class="form-label" for="UserPassword">Password</label>
          </div>
          
          <div data-mdb-input-init class="form-outline mb-2">
            <InputText @bind-Value="SignUpModel.VerifyPassword" type="password" class="form-control form-control-lg" placeholder="Enter password again" required/>
            <label class="form-label" for="UserVerifyPassword">Verify Password</label>
          </div>
          
          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Register</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Already have and account? <a href="#" @onclick="GoToLogin" class="link-danger">Login</a></p>
          </div>
        </EditForm>
      </div>
    </div>
  </div>
  <div
    class="footer d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-3 px-4 px-xl-5 bg-warning mt-3">
    <div class="text-white mb-3 mb-md-0">
      Copyright Â© 2023. All rights reserved.
    </div>
  </div>
</section>


@code {
  private LoginModel SignUpModel = new LoginModel();

  public class LoginModel
  {
    public string Name { get; set; }
    public string Surname { get; set; }
    public string Email { get; set; }
    public string Password { get; set; }
    public string VerifyPassword { get; set; }
  }
  
  private void HandleValidSubmit()
  {
    NavigationManager.NavigateTo("/");
  }
  
  private void GoToLogin()
  {
    NavigationManager.NavigateTo("/");
  }
    
}